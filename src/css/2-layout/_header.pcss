header {
	align-content: center;
	background: var(--dirty-white);
	background-size: 100%;
	display: grid;
	grid-template-columns: 1fr 3fr 1fr;
	min-height: 800px;
	position: relative;

	& .jumbotron {
		grid-column: 2/3;
	}
}

.logo-wrapper {
	position: absolute;
	top: 0;
	left: 0;
	height: 80px;
	width: 160px;
	z-index: 20;

	& .logo-mobile {
		display: block;
		max-width: 80px;
	}

	& .logo-desktop {
		display: none;
	}
}
